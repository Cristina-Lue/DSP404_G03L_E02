@{
    ViewData["Title"] = "Gestión de Pedido";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Gestión de Pedido</h1>

        <!-- Botón para ir al menú del cliente -->
        <div class="text-right mb-3">
            <a href="/Menu/ClienteMenu" class="btn btn-secondary">Ir al Menú del Cliente</a>
        </div>

        <!-- Aquí puedes agregar tu lógica para mostrar los pedidos -->
        <table class="table">
            <thead>
                <tr>
                    <th>Pedido ID</th>
                    <th>Cliente</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Cliente 1</td>
                    <td>En preparación</td>
                    <td>
                        <a href="#" class="btn btn-primary">Actualizar</a>
                        <a href="#" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

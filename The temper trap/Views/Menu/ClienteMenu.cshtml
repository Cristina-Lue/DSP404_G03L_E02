@{
    ViewData["Title"] = "Menú del Cliente";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
         
            background-size: cover;
            color: #ffffff;
        }

        .menu-container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

            .menu-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #ffffff;
            }

        .card {
            margin-bottom: 20px;
            background: rgba(0, 0, 0, 0.3);
            color: #ffffff;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .btn-add-to-cart {
            background-color: #FF6F00;
            border-color: #FF6F00;
        }

            .btn-add-to-cart:hover {
                background-color: #e65c00;
                border-color: #cc5200;
            }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Menú del Cliente</h1>
        <p class="lead">Bienvenido, @ViewBag.NumeroUsuario</p>
    </div>

    <div class="menu-container">
        <div class="row">
            <!-- Plato 1 -->
            <div class="col-md-4">
                <div class="card" id="plato-1">
                    <img src="https://th.bing.com/th/id/R.84553d446b0c87a5e3d0fba9062591e5?rik=oq5qwgVO7gq9WQ&pid=ImgRaw&r=0" class="card-img-top" alt="Alitas fritas con salsa picante o BBQ">
                    <div class="card-body">
                        <h5 class="card-title">Alitas fritas con salsa picante o BBQ</h5>
                        <p class="card-text">Deliciosas alitas.</p>
                        <p class="card-text"><strong>$10.00</strong></p>
                        <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post">
                            <input type="hidden" name="idProducto" value="1" />
                            <input type="number" class="form-control" min="1" value="1" name="cantidad" style="width: 80px; display: inline-block;">
                            <button type="submit" class="btn btn-add-to-cart">Agregar al Carrito</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Plato 2 -->
            <div class="col-md-4">
                <div class="card" id="plato-2">
                    <img src="https://img.freepik.com/fotos-premium/fotografia-comida-carne-asada-verduras-asadas-estilo-cocina-lujo_873668-3876.jpg" class="card-img-top" alt="Corte de carne de res a la parrilla">
                    <div class="card-body">
                        <h5 class="card-title">Corte de carne de res a la parrilla.</h5>
                        <p class="card-text">Carne asada acompañada de verduras asadas.</p>
                        <p class="card-text"><strong>$18.50</strong></p>
                        <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post">
                            <input type="hidden" name="idProducto" value="2" />
                            <input type="number" class="form-control" min="1" value="1" name="cantidad" style="width: 80px; display: inline-block;">
                            <button type="submit" class="btn btn-add-to-cart">Agregar al Carrito</button>
                        </form>
                    </div>
                </div>
            </div>

